<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_list_margin"
    android:background="@color/cardview_light_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_two_line_card_height"
        >

        <ImageView
            tools:ignore="ContentDescription"
            android:id="@+id/dog_image"
            android:layout_width="@dimen/card_two_line_image_height"
            android:layout_height="@dimen/card_two_line_image_height"
            android:layout_margin="@dimen/card_two_line_image_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/ic_pets_black_24dp"
            />
        <TextView
            android:id="@+id/dogName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_two_line_title_height"
            android:layout_marginStart="@dimen/card_two_line_image_vertical_margin"
            app:layout_constraintStart_toEndOf="@id/dog_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/card_two_line_title_text_size"
            tools:text="Dogname"/>

        <ImageView
            tools:ignore="ContentDescription"
            android:id="@+id/owner1_image"
            android:layout_width="@dimen/card_two_line_subimage_height"
            android:layout_height="@dimen/card_two_line_subimage_height"
            android:layout_marginTop="@dimen/card_two_line_image_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/owner1_name"
            app:layout_constraintEnd_toEndOf="@id/owner1_name"
            app:layout_constraintBottom_toTopOf="@id/owner1_name"
            tools:src="@drawable/ic_person_black_24dp"
            />
        <TextView
            android:id="@+id/owner1_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_two_line_title_height"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/card_two_line_image_vertical_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/owner1_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/card_two_line_subtitle_text_size"
            tools:text="Owner1"/>

        <ImageView
            tools:ignore="ContentDescription"
            android:id="@+id/owner2_image"
            android:layout_width="@dimen/card_two_line_subimage_height"
            android:layout_height="@dimen/card_two_line_subimage_height"
            android:layout_marginTop="@dimen/card_two_line_image_vertical_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/owner2_name"
            app:layout_constraintStart_toStartOf="@id/owner2_name"
            app:layout_constraintEnd_toEndOf="@id/owner2_name"
            tools:src="@drawable/ic_person_black_24dp"
            />
        <TextView
            android:id="@+id/owner2_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/card_two_line_title_height"
            android:layout_marginTop="4dp"
            android:layout_marginStart="@dimen/card_two_line_image_vertical_margin"
            android:layout_marginEnd="@dimen/card_two_line_image_vertical_margin"
            app:layout_constraintEnd_toStartOf="@id/owner1_name"
            app:layout_constraintTop_toBottomOf="@id/owner2_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/card_two_line_subtitle_text_size"
            tools:text="Owner2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>